@model AbsoluteLabelServicesTechnicalTest.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}

<div>
    <div>
        <br><p>Enter Search Details</p>
        @using (Html.BeginForm())
        {
            <div>
                <lable>Search:</lable>
                @Html.TextBox("searchphrase")

                <lable>Type:</lable>
                @Html.DropDownList("entity",
                new SelectList(Enum.GetValues(typeof(SearchEntities.iTunes))))

                <input type="submit" value="Search" /><br/><br/>
            </div>
        }

        @foreach (EntityTypeStorage item in Model.ResultsList)
        {
            <div>
                <img src="@item.artworkUrl100">
                <div>
                    @Html.DisplayFor(modelItem => item.artistName) <br />
                    @Html.DisplayFor(modelItem => item.trackName) <br />
                    @Html.DisplayFor(modelItem => item.releaseDate) <br />
                </div>
            </div> <br /><br />
            }

        </div>
</div>
